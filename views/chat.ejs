              <input type="text" class="form-control" name="address" ng-model="newUser.address">
            </div>
            <div class="form-group">
              <label>Fecha nacimiento</label>
              <input type="date" class="form-control" name="birthday" ng-model="newUser.birthday">
            </div>
            <a ng-click="save()" class="btn btn-default btn-sm">Guardar Cambios</a>
            <a ng-click="triggerShowEdit()" class="btn btn-default btn-sm">Cancelar</a>

          </div>
        </div>
        <div class="col-sm-6">
          <div class="well">
            <h3>
              <span class="fa fa-credit-card"></span>
              Tarjetas</h3>

            <p>
              <strong>id</strong>:
              <%= user.id %>
              <br/>
              <strong>username</strong>:
              <%= user.username %>
              <br>
              <strong>Dirección
              </strong>:
              <%= user.address %>
              <br/>
              <strong>Grupo Sanguíneo
              </strong>:
              <%= user.bloodtype %>
              <br/>
              <strong>Fecha de nacimiento:
              </strong>:
              <%= user.birthday %>
              <br/>
              <strong>arquicoins</strong>:
              <%= user.arquicoins %><br>
            </p>
            <a href="/user/<%=user.id%>/card/new" class="btn btn-default btn-sm">Agregar</a>

          </div>
        </div>
      </div>

      <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="well">
            <h3>
              <span class="fa fa-comments"></span>
              Places</h3>

            <div id="map"></div>
            <ul id="rooms"></ul>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="well">
            <h3>
              <span class="fa fa-comment"></span>
